@model HandsOnMVCUsingViewModel.Models.Product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@using (Html.BeginForm("Create", "Product", FormMethod.Post))
{
    <div class="container">
        <table class="table table-bordered">
            <tr>
                <td>@Html.LabelFor(m => m.pID)</td>
                <td>@Html.TextBoxFor(m => m.pID)</td>
                <td>@Html.ValidationMessageFor(m => m.pID)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.pName)</td>
                <td>@Html.TextBoxFor(m => m.pName)</td>
                <td>@Html.ValidationMessageFor(m => m.pName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.price)</td>
                <td>@Html.TextBoxFor(m => m.price)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.stock)</td>
                <td>@Html.TextBoxFor(m => m.stock)</td>
            </tr>

            <tr>
                <td colspan="2">
                    <input type="submit" value="Add" />
                </td>
            </tr>
        </table>
    </div>
}





